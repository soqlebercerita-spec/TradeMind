
# AuraTrade Bot Configuration
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# MetaTrader 5 Connection Settings
# =============================================================================
# Your MT5 account login number
MT5_LOGIN=your_login_here

# Your MT5 account password
MT5_PASSWORD=your_password_here

# Your MT5 broker server name (e.g., "MetaQuotes-Demo", "YourBroker-Live")
MT5_SERVER=your_server_here

# =============================================================================
# Telegram Notifications (Optional)
# =============================================================================
# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# Email Notifications (Optional)
# =============================================================================
# Email address for notifications
EMAIL_ADDRESS=your_email@example.com

# Email password or app password
EMAIL_PASSWORD=your_email_password

# SMTP server (default: smtp.gmail.com)
EMAIL_SMTP_SERVER=smtp.gmail.com

# SMTP port (default: 587)
EMAIL_SMTP_PORT=587

# =============================================================================
# Additional API Settings (Optional)
# =============================================================================
# Webhook URL for custom notifications
WEBHOOK_URL=https://your-webhook-url.com

# Discord webhook for notifications
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook

# =============================================================================
# Development Settings
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG_MODE=False

# Data directory path
DATA_DIR=AuraTrade/data

# Logs directory path
LOGS_DIR=AuraTrade/logs
