
# AuraTrade Bot Configuration
# Copy this file to .env and update with your actual credentials

# MetaTrader 5 Configuration
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_mt5_server_here

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=true

# Trading Configuration
DEFAULT_SYMBOL=EURUSD
DEFAULT_VOLUME=0.01
MAX_SPREAD_PIPS=3.0
MAX_DAILY_LOSS_PERCENT=5.0
MAX_POSITIONS=5

# Risk Management
RISK_PER_TRADE_PERCENT=1.0
STOP_LOSS_PIPS=20
TAKE_PROFIT_PIPS=40

# Strategy Settings
SCALPING_ENABLED=true
HFT_ENABLED=true
PATTERN_ENABLED=true
ARBITRAGE_ENABLED=false
SWING_ENABLED=false

# System Settings
LOG_LEVEL=INFO
GUI_ENABLED=true
AUTO_START=false
DATA_BACKUP_ENABLED=true

# Development Settings
DEBUG_MODE=false
PAPER_TRADING=false
SIMULATION_MODE=false

# Database (Future use)
DATABASE_URL=sqlite:///auratrade.db

# API Keys (Future use)
ALPHAVANTAGE_API_KEY=your_api_key_here
FINNHUB_API_KEY=your_api_key_here
