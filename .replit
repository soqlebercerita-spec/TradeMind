run = "cd AuraTrade && python bot.py"
modules = ["python-3.12"]
[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
run = ["sh", "-c", "cd AuraTrade && python bot.py"]

[workflows]
runButton = "Install and Run AuraTrade Fixed"

[[workflows.workflow]]
name = "Run TradeMind Bot"
author = 46019748
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TradeMind && python bot.py"

[[workflows.workflow]]
name = "Run AuraTrade Bot"
author = 46019748
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AuraTrade && python3 bot.py"

[[workflows.workflow]]
name = "Install Dependencies"
author = 46019748
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AuraTrade && pip3 install -r ../requirements.txt"

[[workflows.workflow]]
name = "Install and Run AuraTrade"
author = 46024361
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install --upgrade pip"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AuraTrade && python bot.py"

[[workflows.workflow]]
name = "Install and Run AuraTrade Fixed"
author = 46036441
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Installing AuraTrade Bot dependencies...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install --upgrade pip setuptools wheel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install -r requirements.txt --no-cache-dir"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Creating necessary directories...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p AuraTrade/logs"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p AuraTrade/data/cache"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p AuraTrade/reports"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Setting up environment...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "if [ ! -f .env ]; then cp .env.example .env; fi"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Starting AuraTrade Bot...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AuraTrade && python bot.py"
